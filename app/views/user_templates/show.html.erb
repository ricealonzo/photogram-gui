<h1><%= @one_user.username %> <h1>
<dl>
<dt>ID</dt>
<dd><%= @one_user.id%></dd>

<form action="/update_user/<%= @one_user.id%>" method="post">
  <label for="browser_username">Username</label>
  <input id="browser_username" type="text" name="input_username" value="<%= @one_user.username %>">

  <button>Update user</button>
</form>

<h2><%= @one_user.username%> has <%= @one_user.own_photos.count%> photos. </h2>

<table border="1">
<tr>
<th>Image</th>
<th>Owner</th>
<th>Caption</th>
<th>Posted</th>
<th></th>
</tr>
<% @one_user.own_photos.each do|user|%>
<tr> 
<td><img src="<%=user.image %>"></td>
<td><%=user.poster.username %></td>
<td><%=user.caption %></td>
<td><%=user.created_at %></td>
<td> <a href="/photos/<%= user.id %>">Show Details</a></td>
</tr>
<% end %>
</table>
 